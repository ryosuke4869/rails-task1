<h3>スケジュール新規作成</h3>

<% if flash[:notice] %>
  <p class = "alert"><%= flash[:notice]%></p>
<% end %>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f|%>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start, "開始日" %></th>
      <td><%= f.date_field :start %></td>
    </tr>

    <tr>
      <th><%= f.label :fin, "終了日" %></th>
      <td><%= f.date_field :fin%></td>
    </tr>

    <tr>
      <th><%= f.label :all, "終日" %></th>
      <td>
        <%= f.check_box :all %>
        <p>終日の場合はチェックを入れます</p>
      </td>
    </tr>

    <tr>
      <th><%= f.label :memo, "メモ" %></th>
      <td><%= f.text_area :memo, {class: "memo"}%></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "新規登録", disable_with: "新規登録" %></li>
      <li><%= link_to "スケジュール一覧に戻る", posts_path%></li>
    </ul>
  </div>
<% end %>